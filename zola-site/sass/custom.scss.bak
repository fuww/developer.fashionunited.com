// Custom styles for FashionUnited Developer Portal
// This file is imported by main.scss - do not import main here

// Custom fonts
@font-face {
  font-family: 'Inter';
  font-style: normal;
  font-weight: 100 900;
  font-display: swap;
  src: url('/fonts/Inter-roman.var.woff2') format('woff2');
}

@font-face {
  font-family: 'Inter';
  font-style: italic;
  font-weight: 100 900;
  font-display: swap;
  src: url('/fonts/Inter-italic.var.woff2') format('woff2');
}

@font-face {
  font-family: 'Lora';
  font-style: normal;
  font-weight: 400;
  font-display: swap;
  src: url('/fonts/lora-regular.latin.woff2') format('woff2'),
       url('/fonts/lora-regular.latin-ext.woff2') format('woff2'),
       url('/fonts/lora-regular.cyrillic.woff2') format('woff2'),
       url('/fonts/lora-regular.cyrillic-ext.woff2') format('woff2');
}

// Override theme variables
:root {
  --font-sans: 'Inter', system-ui, -apple-system, sans-serif;
  --font-serif: 'Lora', Georgia, serif;
  --font-mono: 'IBM Plex Mono', monospace;
}

// Apply custom fonts
body {
  font-family: var(--font-sans);
}

h1, h2, h3, h4, h5, h6 {
  font-family: var(--font-serif);
  font-weight: 400;
}

code, pre {
  font-family: var(--font-mono);
}

// Card components from MDX
.card-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 1.5rem;
  margin: 2rem 0;
}

.card {
  padding: 1.5rem;
  border: 1px solid #e5e7eb;
  border-radius: 0.5rem;
  background: #fff;
  transition: box-shadow 0.2s;
  
  &:hover {
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }
  
  h3 {
    margin-top: 0;
    margin-bottom: 0.5rem;
    font-size: 1.25rem;
  }
  
  p {
    margin-bottom: 0;
    color: #6b7280;
  }
}

// Tabs component replacement
.tabs {
  margin: 2rem 0;
  
  details {
    margin-bottom: 0.5rem;
    border: 1px solid #e5e7eb;
    border-radius: 0.25rem;
    
    summary {
      padding: 0.75rem 1rem;
      cursor: pointer;
      font-weight: 500;
      background: #f9fafb;
      
      &:hover {
        background: #f3f4f6;
      }
    }
    
    > *:not(summary) {
      padding: 1rem;
    }
  }
  
  details[open] summary {
    border-bottom: 1px solid #e5e7eb;
  }
}

// Logo styling
.logo img {
  max-height: 40px;
  width: auto;
}